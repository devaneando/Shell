        </context>

        <context id="tradacom">
            <include>
                <context ref="delimiter"/>
                <context ref="sectionBE"/>
                <context ref="sectionBE2"/>
                <context ref="section"/>
                <context ref="section2"/>
                <context ref="invalid_section"/>
                <context ref="invalid_section2"/>
		<context ref="keyword"/>
            </include>
        </context>

    </definitions>
</language>

