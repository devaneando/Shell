<language id="tradacom" _name="TRADACOM" version="2.0" _section="Markup">
    <metadata>
      <property name="mimetypes">text/x-trad</property>
      <property name="globs">*.tra</property>
    </metadata>
    <styles>
      <style id="invalids" _name="Invalid items" map-to="def:string"/>
      <style id="delimiters" _name="Delimiters" map-to="def:comment"/>
      <style id="sections" _name="Begin of Section" map-to="def:preprocessor"/>
      <style id="keywords" _name="Keyword" map-to="def:keyword"/>
      <style id="StartStops" _name="Begin and End of message" map-to="def:type"/>
    </styles>
    <definitions>
	<context id="delimiter" style-ref="delimiters">
	    <match>(\+|'|:)</match>
        </context>

	<context id="sectionBE" style-ref="StartStops">
	    <match>^(STX|END)\=</match>
        </context>

	<context id="sectionBE2" style-ref="StartStops">
	    <match>(?&lt;=')(STX|END)\=</match>
        </context>

	<context id="section" style-ref="sections">
	    <match>^([a-zA-Z]{3})\=</match>
        </context>

	<context id="section2" style-ref="sections">
	    <match>(?&lt;=')([a-zA-Z]{3})\=</match>
        </context>

	<context id="invalid_section" style-ref="invalids">
	    <match>^[^\=]*\=</match>
        </context>

	<context id="invalid_section2" style-ref="invalids">
	    <match>(?&lt;=')[^\=]*\=</match>
        </context>

	<context id="keyword" style-ref="keywords">
	    <prefix>(?&lt;=['|:|\+|\=])</prefix>
	    <suffix>(?=['|:|\+|\=])</suffix>
	    <keyword>ANA</keyword>
            <keyword>ANAA</keyword>
	    <keyword>PROHDR</keyword>
	    <keyword>PRIHDR</keyword>
	    <keyword>CUSHDR</keyword>
	    <keyword>ORDHDR</keyword>
	    <keyword>PICHDR</keyword>
	    <keyword>DELHDR</keyword>
	    <keyword>DLCHDR</keyword>
	    <keyword>INVFIL</keyword>
	    <keyword>CREHDR</keyword>
	    <keyword>SRMHDR</keyword>
	    <keyword>UPLHDR</keyword>
	    <keyword>UCNHDR</keyword>
	    <keyword>SNPHDR</keyword>
	    <keyword>SADHDR</keyword>
	    <keyword>AVLHDR</keyword>
	    <keyword>GENHDR</keyword>
	    <keyword>CORHDR</keyword>
	    <keyword>ACKHDR</keyword>
	    <keyword>PPRHDR</keyword>
	    <keyword>PAYHDR</keyword>
	    <keyword>DRAHDR</keyword>
	    <keyword>CRAHDR</keyword>
	    <keyword>EXCHDR</keyword>
	    <keyword>LPRHDR</keyword>
	    <keyword>UTLHDR</keyword>
	    <keyword>HOTHDR</keyword>
	    <keyword>EFTHDR</keyword>
