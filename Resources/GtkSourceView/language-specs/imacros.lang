<language id="iim" _name="iMacros" version="2.0" _section="Scripts">

	<metadata>
		<property name="mymetipes">text/x-iim</property>
		<property name="globs">*.iim</property>
		<property name="line-comment-start">'</property>
	</metadata>

	
	<styles>
		<style	id="operator"		_name="Operator"	map-to="def:constant"/>
		<style 	id="comment"		_name="Comment"		map-to="def:comment"/>
		<style 	id="keyword"		_name="Keyword"		map-to="def:keyword"/>
		<style 	id="type"		_name="Data Type"	map-to="def:type"/>
		<style 	id="preprocessor"	_name="Preprocessor"	map-to="def:preprocessor"/>
	</styles>

	
	<definitions>
		<context id="iim">
			<include>


				<context id="operator" style-ref="operator">
							<match extended="true">
							(\.)?\+{1,2}?(?!\+) |
							(\.)?\*{1,2}?(?!\*) |
							&lt;=? | &gt;=? | &lt;&gt; |
							= |
							} |
							{ |
							</match>
				</context> 


				<context id="comment" style-ref="comment" end-at-line-end="true">
					<start>'</start>

					<include>
						<context ref="def:in-line-comment"/>
					</include>
				</context>

		
				<context id="words1" style-ref="keyword" class="no-spell-check">
					<keyword>ADD</keyword>
					<keyword>BACK</keyword>
					<keyword>CLEAR</keyword>
					<keyword>CLICK</keyword>
					<keyword>CMDLINE</keyword>
					<keyword>DISCONNECT</keyword>
					<keyword>DS</keyword>
					<keyword>EXTRACT</keyword>
					<keyword>FILEDELETE</keyword>
					<keyword>FILTER</keyword>
					<keyword>FRAME</keyword>
					<keyword>IMAGECLICK</keyword>
					<keyword>IMAGESEARCH</keyword>
					<keyword>ONCERTIFICATEDIALOG</keyword>
					<keyword>ONDIALOG</keyword>
					<keyword>ONDOWNLOAD</keyword>
					<keyword>ONERRORDIALOG</keyword>
					<keyword>ONLOGIN</keyword>
					<keyword>ONPRINT</keyword>
					<keyword>ONSECURITYDIALOG</keyword>
					<keyword>ONWEBPAGEDIALOG</keyword>
					<keyword>PAUSE</keyword>
					<keyword>PRINT</keyword>
					<keyword>PROMPT</keyword>
					<keyword>PROXY</keyword>
					<keyword>REDIAL</keyword>
					<keyword>REFRESH</keyword>
					<keyword>SAVEAS</keyword>
					<keyword>SET</keyword>
					<keyword>SIZE</keyword>
					<keyword>STOPWATCH</keyword>
					<keyword>TAB</keyword>
					<keyword>TAG</keyword>
					<keyword>URL</keyword>
					<keyword>VERSION</keyword>
					<keyword>WAIT</keyword>
					<keyword>WINCLICK</keyword>
				</context>


				<context id="words2" style-ref="type" class="no-spell-check">
					<keyword>GOTO</keyword>
					<keyword>T</keyword>
					<keyword>POS</keyword>
					<keyword>TYPE</keyword>
					<keyword>FORM</keyword>
					<keyword>ATTR</keyword>
					<keyword>CONTENT</keyword>
					<keyword>BUILD</keyword>
					<keyword>RECORDER</keyword>
					<keyword>EXTRACT</keyword>
					<keyword>CLOSEALLOTHERS</keyword>
					<keyword>FOLDER</keyword>
					<keyword>FILE</keyword>
					<keyword>CLICK</keyword>
					<keyword>X</keyword>
					<keyword>Y</keyword>
					<keyword>CMD</keyword>
					<keyword>STATUS</keyword>
					<keyword>F</keyword>
					<keyword>IMAGE</keyword>
					<keyword>CONFIDENCE</keyword>
					<keyword>C</keyword>
					<keyword>BUTTON</keyword>
					<keyword>CONTINUE</keyword>
					<keyword>USER</keyword>
