					<keyword>USERAGENT</keyword>
					<keyword>VAR1</keyword>
					<keyword>VAR2</keyword>
					<keyword>VAR3</keyword>
					<keyword>VARDEFAULT</keyword>
				</context>


			</include>
		</context>
	</definitions>
</language>
