# vim: ts=4 sw=4 noet ai cindent syntax=lua
# http://conky.sourceforge.net/config_settings.html
# http://conky.sourceforge.net/variables.html

############################# Window positioning
alignment                   top_right
gap_x                       15
gap_y                       15

############################# Window size
maximum_width               300
minimum_size                270 250

############################# Window configuration
background                  false
border_inner_margin         2
border_outer_margin         0
own_window                  true
own_window_class            Conky
own_window_type             desktop
own_window_colour           000000
own_window_transparent      false
own_window_hints            "undecorated,below,sticky,skip_taskbar,skip_pager"

############################# Stop flickering
double_buffer               yes
no_buffers                  true
update_interval             1

############################# Generic settings
draw_shades                 false
default_shade_color         FFFFFF
draw_outline                false
default_outline_color       FFFFFF
draw_borders                false
border_width                0
stippled_borders            0
cpu_avg_samples             2
net_avg_samples             2
extra_newline               false
use_spacer                  none
top_cpu_separate            false
top_name_width              12

############################# Graphs and other drawings
draw_graph_borders          false
default_graph_size          40 10
show_graph_scale            false
show_graph_range            false
default_bar_size            40 10
default_gauge_size          40 10

############################# Text settings
use_xft                     true
xftalpha                    1
xftfont                     Kingthings Trypewriter 2:size=12
override_utf8_locale        true
uppercase                   false

############################# Colors
default_color               FFFFFF # White
color1                      000000 # Black
color2                      2D2D2D # Dark gray
color3                      DCDCDC # Medium gray
color4                      F9F9F9 # Light gray
color5                      3775D6 # Sea blue
color6                      D64937 # Redish
color7                      37D699 # Sea green
color8                      D69937 # Mustard

